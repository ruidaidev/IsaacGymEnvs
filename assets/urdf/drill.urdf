<?xml version="1.0"?>
<robot name="drill">

  <!-- Define the base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.3"/> <!-- A simple box to represent the body -->
      </geometry>
      <material name="gray">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Define the drill bit -->
  <link name="drill_bit">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.15"/> <!-- A simple cylinder to represent the drill bit -->
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Define the joint between the base link and the drill bit -->
  <joint name="drill_joint" type="fixed">
    <parent link="base_link"/>
    <child link="drill_bit"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
