<?xml version="1.0"?>
<robot name="simple_door_with_handle">

  <!-- Link: Hinge Post -->
  <link name="hinge_post">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="2.0"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="2.0"/>
      </geometry>
    </collision>
  </link>

  <!-- Link: Door Panel -->
  <link name="door_panel">
    <visual>
      <origin xyz="0 -0.4 0.0"/>
      <geometry>
        <box size="0.05 0.8 2.0"/>
      </geometry>
      <material name="brown">
        <color rgba="0.6 0.3 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 -0.4 0.0"/>
      <geometry>
        <box size="0.05 0.8 2.0"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 -0.4 0" rpy="0 0 0"/>
      <inertia ixx="1" ixy="0.0" ixz="0.0" iyy="1" iyz="0.0" izz="1"/>
    </inertial>
  </link>

  <!-- Link: Door Handle -->
  <link name="door_handle">
    <visual>
      <origin xyz="0 0.05 0.0"/>
      <geometry>
        <box size="0.02 0.1 0.02"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0.05 0.0"/>
      <geometry>
        <box size="0.02 0.1 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0.0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Joint: Handle Joint -->
  <joint name="handle_hinge" type="revolute">
    <parent link="door_panel"/>
    <child link="door_handle"/>
    <origin xyz="0.026 -0.78 0.1"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.5" upper="0.0" effort="10.0" velocity="1.0"/>
  </joint>

  <!-- Joint: Connecting Door Panel to Hinge Post -->
  <joint name="door_hinge" type="revolute">
    <parent link="hinge_post"/>
    <child link="door_panel"/>
    <origin xyz="0 0 0.0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.0001" effort="10.0" velocity="1.0"/>
  </joint>

</robot>
